@page
@model EditModel
@{
    <h1>Todo List</h1>
    <h4>Edit a todo : @Model.EditTodo.Description</h4>
    <form asp-page="Edit" method="post" class="form-inline">
        <input type="hidden" name="Id" value="@Model.EditTodo.Id" />
        <input type="text" id="Task" name="Task" class="form-control" placeholder="Task" value="@Model.EditTodo.Task" />
        <input type="text" id="Who" name="Who" class="form-control" placeholder="Who" value="@Model.EditTodo.Who" />
        <input type="text" id="Description" name="Description" class="form-control" placeholder="Description" value="@Model.EditTodo.Description" />
        @*<input type="date" id="DueDate" name="DueDate" class="form-control" placeholder="DueDate" value="@Model.EditTodo.DueDate.ToString()" />*@
 <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-save"></span> Update</button>
    </form>
}
